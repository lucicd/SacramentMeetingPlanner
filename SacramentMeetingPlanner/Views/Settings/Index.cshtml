@model IEnumerable<SacramentMeetingPlanner.Models.Setting>

@{
    ViewData["Title"] = "Settings";
}

<h2>Settings</h2>

<p>
    <a class="btn btn-danger" asp-action="Create">Create New</a>
</p>
<table class="table table-hover table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                    <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.ID">Details</a>
                    <a class="btn btn-sm btn-warning" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
